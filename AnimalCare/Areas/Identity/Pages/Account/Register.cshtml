@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="bi bi-person-plus-fill"></i> @ViewData["Title"]
                </h4>
            </div>
            <div class="card-body">
                <p class="text-muted mb-4">
                    <i class="bi bi-info-circle"></i> Register if you are a <strong>Veterinarian</strong> or <strong>Receptionist</strong> at Animal Care Clinic.
                </p>

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- Role Selection -->
                    <div class="form-floating mb-3">
                        <select asp-for="Input.Role" class="form-select" asp-items="Model.Roles">
                            <option value="">-- Select your role --</option>
                        </select>
                        <label asp-for="Input.Role">
                            <i class="bi bi-person-badge"></i> I am a
                        </label>
                        <span asp-validation-for="Input.Role" class="text-danger"></span>
                    </div>

                    <!-- Email -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">
                            <i class="bi bi-envelope"></i> Email
                        </label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                        <small class="text-muted">Use the email registered in our system.</small>
                    </div>

                    <!-- Password -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">
                            <i class="bi bi-lock"></i> Password
                        </label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <!-- Confirm Password -->
                    <div class="form-floating mb-4">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword">
                            <i class="bi bi-lock-fill"></i> Confirm Password
                        </label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <!-- Info Alert -->
                    <div class="alert alert-warning mb-3">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>Important:</strong>
                        <ul class="mb-0 mt-2">
                            <li><strong>Veterinarians:</strong> Your email must be registered in our Veterinarians database</li>
                            <li><strong>Receptionists:</strong> Contact admin to authorize your email</li>
                            <li>You'll be automatically signed in after registration</li>
                        </ul>
                    </div>

                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mb-3">
                        <i class="bi bi-check-circle"></i> Create Account
                    </button>

                    <div class="text-center">
                        <a asp-area="Identity" asp-page="/Account/Login" class="text-decoration-none">
                            <i class="bi bi-box-arrow-in-right"></i> Already have an account? Login
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Password Requirements Card -->
        <div class="card shadow-sm mt-3">
            <div class="card-header bg-light">
                <i class="bi bi-shield-check"></i> Password Requirements
            </div>
            <div class="card-body">
                <ul class="mb-0">
                    <li>Minimum 6 characters</li>
                    <li>At least one uppercase letter</li>
                    <li>At least one lowercase letter</li>
                    <li>At least one number</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
