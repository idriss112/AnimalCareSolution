@using AnimalCare.Models
@model IEnumerable<Appointment>

@{
    ViewData["Title"] = "Today's Schedule";
    var today = DateTime.Today;
    var grouped = Model
        .Where(a => a.AppointmentDateTime.Date == today)
        .GroupBy(a => a.Veterinarian)
        .OrderBy(g => g.Key != null ? g.Key.LastName : string.Empty)
        .ToList();
}

<h2 class="mb-1">
    <i class="bi bi-calendar-day"></i> Today's Schedule
</h2>
<p class="text-muted">Overview of all appointments for @today.ToString("MMMM dd, yyyy").</p>
<hr />

@if (!grouped.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> No appointments scheduled for today.
    </div>
}
else
{
    @foreach (var group in grouped)
    {
        var vet = group.Key;

        <div class="card shadow-sm mb-4">
            <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                <div>
                    <i class="bi bi-person-badge"></i>
                    @if (vet != null)
                    {
                        @vet.FirstName @vet.LastName
                    }
                    else
                    {
                        <span>Unassigned Veterinarian</span>
                    }
                </div>
                <span class="badge bg-light text-dark">
                    <i class="bi bi-calendar-check"></i> @group.Count() appointments
                </span>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Time</th>
                                <th>Animal</th>
                                <th>Owner</th>
                                <th>Reason</th>
                                <th>Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var a in group.OrderBy(x => x.AppointmentDateTime))
                            {
                                var animal = a.Animal;
                                var owner = animal?.Owner;

                                <tr>
                                    <td>@a.AppointmentDateTime.ToString("HH:mm")</td>
                                    <td>
                                        @if (animal != null)
                                        {
                                            <a asp-controller="Animals" asp-action="Details" asp-route-id="@animal.Id">
                                                @animal.Name
                                            </a>
                                        }
                                    </td>
                                    <td>
                                        @if (owner != null)
                                        {
                                            @owner.FirstName @owner.LastName
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrWhiteSpace(a.Reason))
                                        {
                                            @a.Reason
                                        }
                                        else
                                        {
                                            <span class="text-muted">No reason</span>
                                        }
                                    </td>
                                    <td>
                                        @switch (a.Status)
                                        {
                                            case AppointmentStatus.Scheduled:
                                                <span class="badge bg-primary">Scheduled</span>
                                                break;
                                            case AppointmentStatus.Completed:
                                                <span class="badge bg-success">Completed</span>
                                                break;
                                            case AppointmentStatus.Cancelled:
                                                <span class="badge bg-danger">Cancelled</span>
                                                break;
                                            case AppointmentStatus.NoShow:
                                                <span class="badge bg-warning text-dark">No Show</span>
                                                break;
                                        }
                                    </td>
                                    <td class="text-end">
                                        <a asp-action="Details" asp-route-id="@a.Id" class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (User.IsInRole("Admin") || User.IsInRole("Receptionist"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@a.Id" class="btn btn-sm btn-outline-warning">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
}

<a asp-action="Index" class="btn btn-outline-secondary">
    <i class="bi bi-arrow-left"></i> Back to all appointments
</a>
