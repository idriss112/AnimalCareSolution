@using AnimalCare.Models
@model Appointment

@{
    ViewData["Title"] = "Edit Appointment";
}

<h2 class="mb-1">
    <i class="bi bi-pencil-square"></i> Edit Appointment
</h2>
<p class="text-muted">Update the appointment details. Double-booking rules still apply.</p>
<hr />

<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

<div class="row">
    <div class="col-lg-10">
        <form asp-action="Edit" method="post" class="needs-validation" novalidate>
            @* Hidden id *@
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <!-- PATIENT -->
                <div class="col-md-6">
                    <div class="card mb-3 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <i class="bi bi-bandaid"></i> Patient
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label asp-for="AnimalId" class="form-label fw-semibold">Animal</label>
                                <select asp-for="AnimalId" class="form-select" asp-items="ViewBag.Animals">
                                    <option value="">-- Select Animal --</option>
                                </select>
                                <span asp-validation-for="AnimalId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- VET -->
                <div class="col-md-6">
                    <div class="card mb-3 shadow-sm">
                        <div class="card-header bg-success text-white">
                            <i class="bi bi-person-badge"></i> Veterinarian
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label asp-for="VeterinarianId" class="form-label fw-semibold">Veterinarian</label>
                                <select asp-for="VeterinarianId" class="form-select" asp-items="ViewBag.Veterinarians">
                                    <option value="">-- Select Veterinarian --</option>
                                </select>
                                <span asp-validation-for="VeterinarianId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- DATE & TIME -->
            <div class="card mb-3 shadow-sm">
                <div class="card-header bg-info text-white">
                    <i class="bi bi-calendar-event"></i> Date & Time
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="AppointmentDateTime" class="form-label fw-semibold">
                                Date & Time
                            </label>
                            <input asp-for="AppointmentDateTime"
                                   class="form-control"
                                   type="datetime-local" />
                            <span asp-validation-for="AppointmentDateTime" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="DurationMinutes" class="form-label fw-semibold">Duration</label>
                            <select asp-for="DurationMinutes" class="form-select">
                                <option value="15">15 minutes</option>
                                <option value="30">30 minutes</option>
                                <option value="45">45 minutes</option>
                                <option value="60">60 minutes</option>
                            </select>
                            <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                        </div>
                    </div>

                    @if (ViewData.ModelState.ContainsKey(nameof(Model.AppointmentDateTime)) &&
                                        ViewData.ModelState[nameof(Model.AppointmentDateTime)]!.Errors.Count > 0)
                    {
                        <div class="alert alert-warning mt-3" role="alert">
                            <h5 class="alert-heading">
                                <i class="bi bi-exclamation-triangle"></i> Scheduling conflict
                            </h5>
                            <p class="mb-1">
                                @ViewData.ModelState[nameof(Model.AppointmentDateTime)]!.Errors[0].ErrorMessage
                            </p>
                            <p class="mb-0">Please choose another time.</p>
                        </div>
                    }
                </div>
            </div>

            <!-- DETAILS -->
            <div class="card mb-3 shadow-sm">
                <div class="card-header">
                    <i class="bi bi-card-text"></i> Details
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Reason" class="form-label fw-semibold">Reason</label>
                        <textarea asp-for="Reason" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Reason" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Status" class="form-label fw-semibold">Status</label>
                        <select asp-for="Status" class="form-select">
                            <option value="0">Scheduled</option>
                            <option value="1">Completed</option>
                            <option value="2">Cancelled</option>
                            <option value="3">No Show</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- ACTIONS -->
            <div class="mb-3">
                <button type="submit" class="btn btn-primary btn-lg me-2">
                    <i class="bi bi-save"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
