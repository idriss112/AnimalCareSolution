@model AnimalCare.Models.Owner

@{
    ViewData["Title"] = "Delete Owner";
}

<h2 class="fw-bold mb-4 text-danger">
    <i class="bi bi-trash-fill me-2"></i> Delete Owner
</h2>

<div class="card shadow-sm border-danger">
    <div class="card-header bg-danger text-white fw-bold">
        <i class="bi bi-exclamation-octagon-fill me-2"></i>
        Warning: This action cannot be undone
    </div>

    <div class="card-body">
        <p>Are you sure you want to delete the following owner?</p>

        <ul class="list-group mb-3">
            <li class="list-group-item">
                <strong>Name:</strong> @Model.FirstName @Model.LastName
            </li>
            <li class="list-group-item">
                <strong>Email:</strong> @Model.Email
            </li>
            <li class="list-group-item">
                <strong>Phone:</strong> @Model.PhoneNumber
            </li>
            
        </ul>

        @if (Model.Animals != null && Model.Animals.Any())
        {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                This owner has <strong>@Model.Animals.Count</strong> registered animals.
                <br />
                <strong>You must remove or reassign these animals before deleting this owner.</strong>
            </div>

            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Back
            </a>
        }
        else
        {
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />

                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash-fill"></i> Confirm Delete
                </button>

                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </form>
        }

    </div>
</div>
