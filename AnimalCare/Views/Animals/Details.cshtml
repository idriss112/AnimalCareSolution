@model AnimalCare.Models.Animal

@{
    ViewData["Title"] = "Animal Details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-0">
            <i class="bi bi-heart-pulse"></i> @Model.Name
        </h2>
        <small class="text-muted">Detailed information about this animal.</small>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary me-2">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>

        @if (User.IsInRole("Admin") || User.IsInRole("Receptionist"))
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-1">
                <i class="bi bi-pencil"></i> Edit
            </a>
        }

        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </a>
        }
    </div>
</div>

<div class="row">
    <!-- Animal info card -->
    <div class="col-lg-6 mb-3">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white d-flex align-items-center">
                <i class="bi bi-bandaid-fill me-2"></i>
                <h5 class="mb-0">Animal Information</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4">Species</dt>
                    <dd class="col-sm-8">@Model.Species</dd>

                    <dt class="col-sm-4">Breed</dt>
                    <dd class="col-sm-8">@(!string.IsNullOrEmpty(Model.Breed) ? Model.Breed : "-")</dd>

                    <dt class="col-sm-4">Sex</dt>
                    <dd class="col-sm-8">@(!string.IsNullOrEmpty(Model.Sex) ? Model.Sex : "-")</dd>

                    <dt class="col-sm-4">Date of Birth</dt>
                    <dd class="col-sm-8">
                        @if (Model.DateOfBirth.HasValue)
                        {
                            @Model.DateOfBirth.Value.ToString("yyyy-MM-dd")
                        }
                        else
                        {
                            <span class="text-muted">Unknown</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Weight (kg)</dt>
                    <dd class="col-sm-8">
                        @if (Model.Weight.HasValue)
                        {
                            @Model.Weight.Value.ToString("0.0")
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Created At (UTC)</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
                </dl>

                <hr />

                <h6><i class="bi bi-sticky"></i> Important Notes</h6>
                @if (!string.IsNullOrWhiteSpace(Model.ImportantNotes))
                {
                    <p class="mb-0">@Model.ImportantNotes</p>
                }
                else
                {
                    <p class="text-muted mb-0">No special notes recorded.</p>
                }
            </div>
        </div>
    </div>

    <!-- Owner info -->
    <div class="col-lg-6 mb-3">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white d-flex align-items-center">
                <i class="bi bi-person-heart me-2"></i>
                <h5 class="mb-0">Owner Information</h5>
            </div>
            <div class="card-body">
                @if (Model.Owner != null)
                {
                    <p class="mb-1">
                        <strong>@Model.Owner.FirstName @Model.Owner.LastName</strong>
                    </p>

                    @if (!string.IsNullOrEmpty(Model.Owner.PhoneNumber))
                    {
                        <p class="mb-1">
                            <i class="bi bi-telephone"></i> @Model.Owner.PhoneNumber
                        </p>
                    }

                    @if (!string.IsNullOrEmpty(Model.Owner.Email))
                    {
                        <p class="mb-1">
                            <i class="bi bi-envelope"></i> @Model.Owner.Email
                        </p>
                    }

                    @if (!string.IsNullOrEmpty(Model.Owner.Address))
                    {
                        <p class="mb-0">
                            <i class="bi bi-geo-alt"></i> @Model.Owner.Address
                        </p>
                    }

                    <hr />
                    <a asp-controller="Owners"
                       asp-action="Details"
                       asp-route-id="@Model.OwnerId"
                       class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-box-arrow-up-right"></i> View Owner Profile
                    </a>
                }
                else
                {
                    <p class="text-muted mb-0">No owner information available.</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Appointment history -->
<div class="card shadow-sm mt-3">
    <div class="card-header d-flex align-items-center">
        <i class="bi bi-calendar2-week me-2"></i>
        <h5 class="mb-0">Appointment History</h5>
    </div>
    <div class="card-body">
        @if (Model.Appointments != null && Model.Appointments.Any())
        {
            <div class="table-responsive">
                <table class="table table-sm table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Date & Time</th>
                            <th>Veterinarian</th>
                            <th>Reason</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var appt in Model.Appointments.OrderByDescending(a => a.AppointmentDateTime))
                        {
                            <tr>
                                <td>@appt.AppointmentDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    @if (appt.Veterinarian != null)
                                    {
                                        @($"{appt.Veterinarian.FirstName} {appt.Veterinarian.LastName}")
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>@appt.Reason</td>
                                <td>
                                    @* Adjust if your enum values differ *@
                                    @switch (appt.Status)
                                    {
                                        case AppointmentStatus.Scheduled:
                                            <span class="badge bg-primary">Scheduled</span>
                                            break;
                                        case AppointmentStatus.Completed:
                                            <span class="badge bg-success">Completed</span>
                                            break;
                                        case AppointmentStatus.Cancelled:
                                            <span class="badge bg-danger">Cancelled</span>
                                            break;
                                        case AppointmentStatus.NoShow:
                                            <span class="badge bg-warning text-dark">No Show</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">Unknown</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <a asp-controller="Appointments"
                                       asp-action="Details"
                                       asp-route-id="@appt.Id"
                                       class="btn btn-sm btn-outline-info">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted mb-0">No appointments recorded for this animal yet.</p>
        }
    </div>
</div>
