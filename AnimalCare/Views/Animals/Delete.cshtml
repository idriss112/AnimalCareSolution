@model AnimalCare.Models.Animal

@{
    ViewData["Title"] = "Delete Animal";
}

<h2 class="text-danger">
    <i class="bi bi-exclamation-triangle"></i> Delete Animal
</h2>
<hr />

<div class="alert alert-warning d-flex align-items-center">
    <i class="bi bi-exclamation-circle me-2"></i>
    <div>
        Are you sure you want to delete this animal record?
        This action <strong>cannot be undone</strong>.
    </div>
</div>

<div class="card shadow-sm mb-3">
    <div class="card-header bg-light">
        <h5 class="mb-0"><i class="bi bi-heart-pulse"></i> Animal Summary</h5>
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Species</dt>
            <dd class="col-sm-9">@Model.Species</dd>

            <dt class="col-sm-3">Breed</dt>
            <dd class="col-sm-9">@(!string.IsNullOrEmpty(Model.Breed) ? Model.Breed : "-")</dd>

            <dt class="col-sm-3">Owner</dt>
            <dd class="col-sm-9">
                @if (Model.Owner != null)
                {
                    @($"{Model.Owner.FirstName} {Model.Owner.LastName}")
                }
                else
                {
                    <span class="text-muted">No owner</span>
                }
            </dd>

            <dt class="col-sm-3">Appointments</dt>
            <dd class="col-sm-9">
                @if (Model.Appointments != null && Model.Appointments.Any())
                {
                    <span class="badge bg-danger">
                        @Model.Appointments.Count appointment(s) linked
                    </span>
                    <div class="text-muted small mt-1">
                        Your controller should decide if deletion is allowed when appointments exist.
                    </div>
                }
                else
                {
                    <span class="badge bg-success">No appointments linked</span>
                }
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Confirm Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> Cancel
        </a>
    </div>
</form>
