@model IEnumerable<AnimalCare.Models.VetSchedule>

@{
    ViewData["Title"] = "Delete All Schedules";
    var vet = ViewBag.Veterinarian as AnimalCare.Models.Veterinarian;
    var scheduleCount = ViewBag.ScheduleCount as int?;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-danger">
        <i class="bi bi-trash me-2"></i> Delete All Schedules
    </h2>
</div>

<div class="alert alert-danger shadow-sm mb-4">
    <i class="bi bi-exclamation-octagon me-2"></i>
    <strong>Warning!</strong> You are about to delete <strong>ALL @scheduleCount schedules</strong> for this veterinarian.
    This action cannot be undone!
</div>

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <i class="bi bi-person-badge"></i> Veterinarian: @vet.FirstName @vet.LastName
    </div>
    <div class="card-body">
        <h5 class="mb-3">The following schedules will be deleted:</h5>

        <div class="table-responsive">
            <table class="table table-sm table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Day of Week</th>
                        <th>Working Hours</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var schedule in Model)
                    {
                        <tr>
                            <td><strong>@schedule.DayOfWeek</strong></td>
                            <td>
                                <span class="badge bg-info">
                                    @schedule.StartTime.ToString(@"hh\:mm") - @schedule.EndTime.ToString(@"hh\:mm")
                                </span>
                            </td>
                            <td>
                                @if (schedule.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="alert alert-warning mt-3">
            <i class="bi bi-info-circle"></i>
            After deletion, this veterinarian will have <strong>no scheduled days</strong>. 
            You will need to create a new schedule with at least 3 days.
        </div>

        <form asp-action="DeleteAll" method="post">
            <input type="hidden" name="veterinarianId" value="@vet.Id" />
            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Yes, Delete All @scheduleCount Schedules
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> No, Go Back
                </a>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-link">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>
