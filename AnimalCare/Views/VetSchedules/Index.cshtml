@model IEnumerable<AnimalCare.Models.VetSchedule>
@using AnimalCare.ViewModels

@{
    ViewData["Title"] = "Veterinarian Schedules";
    var groupedSchedules = ViewBag.GroupedSchedules as List<VetScheduleGroupViewModel>;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">
        <i class="bi bi-calendar-week me-2 text-primary"></i> Veterinarian Schedules
    </h2>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="bi bi-plus-circle me-1"></i> Add New Schedule
    </a>
</div>

<div class="alert alert-info shadow-sm mb-4">
    <i class="bi bi-info-circle me-2"></i>
    <strong>Schedule Info:</strong> All veterinarians work <strong>8:00 AM to 4:00 PM</strong> on their scheduled days.
    Minimum <strong>3 days per week</strong> required.
</div>

<!-- Filter by Veterinarian -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index" class="row g-2">
            <div class="col-md-8">
                <select name="veterinarianId" class="form-select" asp-items="ViewBag.VeterinarianId">
                    <option value="">-- All Veterinarians --</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-funnel"></i> Filter
                </button>
            </div>
            <div class="col-md-2">
                <a asp-action="Index" class="btn btn-outline-secondary w-100">
                    <i class="bi bi-x-circle"></i> Clear
                </a>
            </div>
        </form>
    </div>
</div>

@if (groupedSchedules != null && groupedSchedules.Any())
{
    @foreach (var group in groupedSchedules)
    {
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <div>
                    <i class="bi bi-person-badge me-2"></i>
                    <strong>@group.Veterinarian.FirstName @group.Veterinarian.LastName</strong>
                    <span class="badge bg-light text-dark ms-2">@group.DayCount days/week</span>
                    <span class="badge bg-warning text-dark ms-1">@(group.DayCount * 8) hours/week</span>
                </div>
                <div class="btn-group">
                    <a asp-action="EditAll" asp-route-veterinarianId="@group.Veterinarian.Id"
                       class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil-square"></i> Edit Schedule
                    </a>
                    <a asp-action="DeleteAll" asp-route-veterinarianId="@group.Veterinarian.Id"
                       class="btn btn-sm btn-danger"
                       onclick="return confirm('Are you sure you want to delete ALL schedules for @group.Veterinarian.FirstName @group.Veterinarian.LastName?');">
                        <i class="bi bi-trash"></i> Delete All
                    </a>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 35%;"><i class="bi bi-calendar-day"></i> Day of Week</th>
                            <th style="width: 35%;"><i class="bi bi-clock"></i> Working Hours</th>
                            <th style="width: 30%;"><i class="bi bi-check-circle"></i> Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var schedule in group.Schedules)
                        {
                            <tr>
                                <td>
                                    <strong class="text-primary">@schedule.DayOfWeek</strong>
                                </td>
                                <td>
                                    <span class="badge bg-info text-white px-3 py-2">
                                        <i class="bi bi-clock"></i>
                                        @schedule.StartTime.ToString(@"hh\:mm") AM - @schedule.EndTime.ToString(@"hh\:mm") PM
                                    </span>
                                </td>
                                <td>
                                    @if (schedule.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-x-circle"></i> Inactive
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer text-muted bg-light">
                <div class="row">
                    <div class="col-md-6">
                        <small>
                            <i class="bi bi-calendar-check"></i>
                            <strong>Working Days:</strong>
                            @string.Join(", ", group.Schedules.OrderBy(s => s.DayOfWeek).Select(s => s.DayOfWeek.ToString().Substring(0, 3)))
                        </small>
                    </div>
                    <div class="col-md-6 text-end">
                        <small>
                            <i class="bi bi-clock-history"></i>
                            <strong>Total Weekly Hours:</strong> @(group.DayCount * 8) hours
                        </small>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="alert alert-warning shadow-sm text-center py-5">
        <i class="bi bi-exclamation-circle" style="font-size: 3rem;"></i>
        <h4 class="mt-3">No Schedules Found</h4>
        <p class="text-muted">There are no veterinarian schedules in the system yet.</p>
        <a asp-action="Create" class="btn btn-primary btn-lg mt-2">
            <i class="bi bi-plus-circle"></i> Create First Schedule
        </a>
    </div>
}
