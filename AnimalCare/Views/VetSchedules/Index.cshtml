@model IEnumerable<AnimalCare.Models.VetSchedule>

@{
    ViewData["Title"] = "Vet Schedules";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-0">
            <i class="bi bi-calendar-week text-primary"></i> Veterinarian Schedules
        </h2>
        <p class="text-muted mb-0">
            Manage when veterinarians are available for appointments.
        </p>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-calendar-plus"></i> Add Schedule
        </a>
    </div>
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <form method="get" asp-action="Index" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">
                    <i class="bi bi-person-badge"></i> Filter by Veterinarian
                </label>
                <select name="veterinarianId" class="form-select" asp-items="ViewBag.Veterinarians">
                    <option value="">All veterinarians</option>
                </select>
            </div>

            <div class="col-md-3">
                <label class="form-label">
                    <i class="bi bi-calendar-day"></i> Date
                </label>
                <input type="date" name="date" class="form-control" value="@ViewBag.FilterDate" />
            </div>

            <div class="col-md-3">
                <label class="form-label">
                    <i class="bi bi-toggle-on"></i> Status
                </label>
                <select name="status" class="form-select">
                    <option value="">All</option>
                    <option value="active" selected="@(ViewBag.Status == "active")">Active</option>
                    <option value="inactive" selected="@(ViewBag.Status == "inactive")">Inactive</option>
                </select>
            </div>

            <div class="col-md-2 text-md-end">
                <button type="submit" class="btn btn-outline-primary w-100">
                    <i class="bi bi-funnel"></i> Filter
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th><i class="bi bi-person-badge"></i> Veterinarian</th>
                    <th><i class="bi bi-arrow-repeat"></i> Type</th>
                    <th><i class="bi bi-calendar-day"></i> Date / Day</th>
                    <th><i class="bi bi-clock-history"></i> Time Range</th>
                    <th><i class="bi bi-toggle-on"></i> Status</th>
                    <th><i class="bi bi-clock"></i> Duration</th>
                    <th class="text-end"><i class="bi bi-gear"></i> Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var s in Model
                    .OrderBy(s => s.IsRecurring ? 1 : 0)
                    .ThenBy(s => s.Date ?? DateTime.MaxValue)
                    .ThenBy(s => s.DayOfWeek)
                    .ThenBy(s => s.StartTime))
                    {
                        var start = s.StartTime.ToString(@"hh\:mm");
                        var end = s.EndTime.ToString(@"hh\:mm");
                        var duration = (s.EndTime - s.StartTime).TotalMinutes;

                        <tr>
                            <td>
                                @if (s.Veterinarian != null)
                                {
                                    <strong>@s.Veterinarian.FirstName @s.Veterinarian.LastName</strong>
                                }
                                else
                                {
                                    <span class="text-muted">Unknown vet</span>
                                }
                            </td>
                            <td>
                                @if (s.IsRecurring)
                                {
                                    <span class="badge bg-info">
                                        <i class="bi bi-arrow-repeat"></i> Recurring
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-calendar-event"></i> One-time
                                    </span>
                                }
                            </td>
                            <td>
                                @if (s.IsRecurring && s.DayOfWeek.HasValue)
                                {
                                    <span>
                                        Every <strong>@s.DayOfWeek.Value</strong>
                                    </span>
                                }
                                else if (s.Date.HasValue)
                                {
                                    @s.Date.Value.ToString("yyyy-MM-dd")
                                }
                                else
                                {
                                    <span class="text-muted">Not set</span>
                                }
                            </td>
                            <td>
                                <i class="bi bi-clock"></i>
                                @start - @end
                            </td>
                            <td>
                                @if (s.IsActive)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-pause-circle"></i> Inactive
                                    </span>
                                }
                            </td>
                            <td>
                                <span class="badge bg-primary">
                                    @duration.ToString("0") min
                                </span>
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-outline-warning">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-outline-danger">
                                        <i class="bi bi-trash3"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7">
                            <div class="p-4 text-center text-muted">
                                <i class="bi bi-calendar-x fs-3 d-block mb-2"></i>
                                No schedules found.
                                <a asp-action="Create">Add a schedule</a> to define vet availability.
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
