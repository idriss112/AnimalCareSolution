@model AnimalCare.Models.VetSchedule

@{
    ViewData["Title"] = "Delete Vet Schedule";
}

<h2 class="mb-1 text-danger">
    <i class="bi bi-trash3-fill"></i> Delete Veterinarian Schedule
</h2>
<p class="text-muted">
    This action will remove this availability entry.
</p>
<hr />

<div class="row">
    <div class="col-lg-8">
        <div class="card border-danger shadow-sm">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">
                    <i class="bi bi-exclamation-triangle-fill"></i> Confirm Deletion
                </h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Veterinarian</dt>
                    <dd class="col-sm-8">
                        @if (Model.Veterinarian != null)
                        {
                            @Model.Veterinarian.FirstName @Model.Veterinarian.LastName
                        }
                        else
                        {
                            <span class="text-muted">Unknown vet</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Type</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsRecurring)
                        {
                            <span class="badge bg-info">
                                <i class="bi bi-arrow-repeat"></i> Recurring
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">
                                <i class="bi bi-calendar-event"></i> One-time
                            </span>
                        }
                    </dd>

                    <dt class="col-sm-4">Date / Day</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsRecurring && Model.DayOfWeek.HasValue)
                        {
                            <span>Every <strong>@Model.DayOfWeek.Value</strong></span>
                        }
                        else if (Model.Date.HasValue)
                        {
                            @Model.Date.Value.ToString("yyyy-MM-dd")
                        }
                        else
                        {
                            <span class="text-muted">Not set</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Time Range</dt>
                    <dd class="col-sm-8">
                        @Model.StartTime.ToString(@"hh\:mm") - @Model.EndTime.ToString(@"hh\:mm")
                    </dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle"></i> Active
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">
                                <i class="bi bi-pause-circle"></i> Inactive
                            </span>
                        }
                    </dd>
                </dl>

                <div class="alert alert-danger mt-3">
                    <strong>Warning:</strong> Make sure there are no appointments depending on this schedule.
                    Your business logic should prevent deleting schedules that cause conflicts.
                </div>

                <form asp-action="Delete" method="post" class="mt-3">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash3-fill"></i> Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
