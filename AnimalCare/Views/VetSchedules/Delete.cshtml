@model AnimalCare.Models.VetSchedule

@{
    ViewData["Title"] = "Delete Schedule";
    var vetScheduleCount = ViewBag.VetScheduleCount as int?;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-danger">
        <i class="bi bi-trash me-2"></i> Delete Schedule
    </h2>
</div>

@if (vetScheduleCount.HasValue && vetScheduleCount.Value <= 3)
{
    <div class="alert alert-danger shadow-sm mb-4">
        <i class="bi bi-exclamation-triangle me-2"></i>
        <strong>Warning!</strong> This veterinarian currently has <strong>@vetScheduleCount days</strong> scheduled.
        Deleting this schedule will leave them with <strong>@(vetScheduleCount.Value - 1) days</strong>,
        which is below the minimum requirement of 3 days per week.
    </div>
}

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <i class="bi bi-exclamation-octagon"></i> Confirm Deletion
    </div>
    <div class="card-body">
        <h5 class="mb-3">Are you sure you want to delete this schedule?</h5>

        <dl class="row">
            <dt class="col-sm-4">
                <i class="bi bi-person-badge"></i> Veterinarian
            </dt>
            <dd class="col-sm-8">
                @Model.Veterinarian.FirstName @Model.Veterinarian.LastName
            </dd>

            <dt class="col-sm-4">
                <i class="bi bi-calendar-day"></i> Day of Week
            </dt>
            <dd class="col-sm-8">
                <strong>@Model.DayOfWeek</strong>
            </dd>

            <dt class="col-sm-4">
                <i class="bi bi-clock"></i> Working Hours
            </dt>
            <dd class="col-sm-8">
                @Model.StartTime.ToString(@"hh\:mm") - @Model.EndTime.ToString(@"hh\:mm")
            </dd>

            <dt class="col-sm-4">
                <i class="bi bi-check-circle"></i> Status
            </dt>
            <dd class="col-sm-8">
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inactive</span>
                }
            </dd>

            @if (vetScheduleCount.HasValue)
            {
                <dt class="col-sm-4">
                    <i class="bi bi-calendar-week"></i> Total Days for Vet
                </dt>
                <dd class="col-sm-8">
                    <span class="badge bg-info">@vetScheduleCount days/week</span>
                </dd>

                <dt class="col-sm-4">
                    <i class="bi bi-arrow-right"></i> After Deletion
                </dt>
                <dd class="col-sm-8">
                    <span class="badge @(vetScheduleCount.Value > 3 ? "bg-warning" : "bg-danger")">
                        @(vetScheduleCount.Value - 1) days/week
                    </span>
                    @if (vetScheduleCount.Value <= 3)
                    {
                        <span class="text-danger ms-2">
                            <i class="bi bi-exclamation-triangle"></i> Below minimum!
                        </span>
                    }
                </dd>
            }
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Yes, Delete Schedule
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> No, Go Back
                </a>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-link">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>
