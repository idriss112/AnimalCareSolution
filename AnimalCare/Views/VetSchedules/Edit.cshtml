@model AnimalCare.Models.VetSchedule

@{
    ViewData["Title"] = "Edit Vet Schedule";
}

<h2 class="mb-1">
    <i class="bi bi-pencil-square text-warning"></i> Edit Veterinarian Schedule
</h2>
<p class="text-muted">
    Update availability for this veterinarian (one-time or recurring schedule).
</p>
<hr />

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Vet -->
                    <div class="mb-3">
                        <label asp-for="VeterinarianId" class="form-label">
                            <i class="bi bi-person-badge"></i> Veterinarian
                        </label>
                        <select asp-for="VeterinarianId" class="form-select" asp-items="ViewBag.Veterinarians">
                            <option value="">-- Select Veterinarian --</option>
                        </select>
                        <span asp-validation-for="VeterinarianId" class="text-danger"></span>
                    </div>

                    <!-- Recurring toggle -->
                    <div class="form-check form-switch mb-3">
                        <input asp-for="IsRecurring" class="form-check-input" id="recurringSwitch" />
                        <label asp-for="IsRecurring" class="form-check-label">
                            Recurring weekly schedule
                        </label>
                    </div>

                    <!-- Date / DayOfWeek -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Date" class="form-label">
                                <i class="bi bi-calendar-day"></i> Specific Date
                            </label>
                            <input asp-for="Date" type="date" class="form-control" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="DayOfWeek" class="form-label">
                                <i class="bi bi-arrow-repeat"></i> Day of Week (Recurring)
                            </label>
                            <select asp-for="DayOfWeek" class="form-select">
                                <option value="">-- Select Day --</option>
                                @foreach (DayOfWeek day in Enum.GetValues(typeof(DayOfWeek)))
                                {
                                    var selected = Model.DayOfWeek.HasValue && Model.DayOfWeek.Value == day;
                                    <option value="@((int)day)" selected="@(selected)">
                                        @day
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="DayOfWeek" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Time range -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="StartTime" class="form-label">
                                <i class="bi bi-clock"></i> Start Time
                            </label>
                            <input asp-for="StartTime" type="time" class="form-control" />
                            <span asp-validation-for="StartTime" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="EndTime" class="form-label">
                                <i class="bi bi-clock-history"></i> End Time
                            </label>
                            <input asp-for="EndTime" type="time" class="form-control" />
                            <span asp-validation-for="EndTime" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Active -->
                    <div class="form-check form-switch mb-3">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label asp-for="IsActive" class="form-check-label">
                            Active schedule
                        </label>
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        Overlap checks, clinic hours, and recurrence rules are enforced in the controller.
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var recurringSwitch = document.getElementById('recurringSwitch');
            var dateInput = document.querySelector('input[name="Date"]');
            var daySelect = document.querySelector('select[name="DayOfWeek"]');

            function toggleInputs() {
                if (recurringSwitch.checked) {
                    // Recurring – mainly DayOfWeek, but we keep both enabled for flexibility
                } else {
                    // One-time – mainly Date
                }
            }

            if (recurringSwitch && dateInput && daySelect) {
                recurringSwitch.addEventListener('change', toggleInputs);
                toggleInputs();
            }
        });
    </script>
}
