@model AnimalCare.Models.Veterinarian

@{
    ViewData["Title"] = "Veterinarian Details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-0">
            <i class="bi bi-person-vcard-fill text-primary"></i> Veterinarian Details
        </h2>
        <p class="text-muted mb-0">Profile and statistics for this veterinarian.</p>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-6 mb-3">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-person-badge-fill"></i> Basic Information
                </h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrWhiteSpace(Model.Email))
                        {
                            <a href="mailto:@Model.Email">@Model.Email</a>
                        }
                        else
                        {
                            <span class="text-muted">N/A</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Phone</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrWhiteSpace(Model.PhoneNumber))
                        {
                            <a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a>
                        }
                        else
                        {
                            <span class="text-muted">N/A</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle"></i> Active
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">
                                <i class="bi bi-pause-circle"></i> Inactive
                            </span>
                        }
                    </dd>

                    <dt class="col-sm-4">Created At</dt>
                    <dd class="col-sm-8">
                        @Model.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-3">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">
                    <i class="bi bi-card-text"></i> Specialization & Account
                </h5>
            </div>
            <div class="card-body">
                <h6>Specialization Summary</h6>
                <p>
                    @if (!string.IsNullOrWhiteSpace(Model.SpecializationSummary))
                    {
                        @Model.SpecializationSummary
                    }
                    else
                    {
                        <span class="text-muted">No specialization summary provided.</span>
                    }
                </p>

                <hr />

                <h6>Linked User Account</h6>
                @if (Model.User != null)
                {
                    <p class="mb-1">
                        <i class="bi bi-person-circle"></i>
                        @Model.User.FirstName @Model.User.LastName
                        <span class="text-muted">(@Model.User.Email)</span>
                    </p>
                    <span class="badge bg-secondary">
                        <i class="bi bi-key"></i> Application User Linked
                    </span>
                }
                else
                {
                    <p class="text-muted mb-0">
                        <i class="bi bi-person-dash"></i> No application user linked to this veterinarian.
                    </p>
                }
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-lg-6 mb-3">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <i class="bi bi-clipboard2-heart"></i> Appointment Overview
                </h5>
            </div>
            <div class="card-body">
                <p>
                    <strong>Total Appointments:</strong>
                    <span class="badge bg-primary">
                        @(Model.Appointments?.Count ?? 0)
                    </span>
                </p>
                <p class="text-muted mb-0">
                    Detailed appointment statistics are handled in the Admin Monthly Report.
                </p>
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-3">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">
                    <i class="bi bi-calendar-week"></i> Schedule Overview
                </h5>
            </div>
            <div class="card-body">
                <p>
                    <strong>Number of schedule entries:</strong>
                    <span class="badge bg-info">
                        @(Model.VetSchedules?.Count ?? 0)
                    </span>
                </p>
                <p class="text-muted mb-0">
                    Detailed schedule management is available in the Vet Schedules section.
                </p>
            </div>
        </div>
    </div>
</div>
