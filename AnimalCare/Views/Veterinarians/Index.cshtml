@model IEnumerable<AnimalCare.Models.Veterinarian>

@{
    ViewData["Title"] = "Veterinarians";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-0">
            <i class="bi bi-heart-pulse-fill text-danger"></i> Veterinarians
        </h2>
        <p class="text-muted mb-0">Manage clinic veterinarians and their status.</p>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-person-plus-fill"></i> Add Veterinarian
        </a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th><i class="bi bi-person-badge"></i> Name</th>
                    <th><i class="bi bi-envelope-at"></i> Email</th>
                    <th><i class="bi bi-telephone"></i> Phone</th>
                    <th><i class="bi bi-award"></i> Specialties</th>
                    <th><i class="bi bi-toggle-on"></i> Status</th>
                    <th><i class="bi bi-calendar-event"></i> Appointments</th>
                    <th><i class="bi bi-clock-history"></i> Created</th>
                    <th class="text-end"><i class="bi bi-gear"></i> Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var vet in Model)
                    {
                        <tr>
                            <td>
                                <strong>@vet.FirstName @vet.LastName</strong>
                            </td>
                            <td>
                                @if (!string.IsNullOrWhiteSpace(vet.Email))
                                {
                                    <a href="mailto:@vet.Email">@vet.Email</a>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrWhiteSpace(vet.PhoneNumber))
                                {
                                    <a href="tel:@vet.PhoneNumber">@vet.PhoneNumber</a>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td>
                                @* FIXED: Show actual specialties instead of summary *@
                                @if (vet.VetSpecialties != null && vet.VetSpecialties.Any())
                                {
                                    @foreach (var specialty in vet.VetSpecialties)
                                    {
                                        <span class="badge bg-success me-1">@specialty.Name</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">No specialties</span>
                                }
                            </td>
                            <td>
                                @if (vet.IsActive)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-pause-circle"></i> Inactive
                                    </span>
                                }
                            </td>
                            <td>
                                <span class="badge bg-info">
                                    <i class="bi bi-clipboard2-heart"></i>
                                    @(vet.Appointments?.Count ?? 0)
                                </span>
                            </td>
                            <td>
                                @vet.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@vet.Id" class="btn btn-outline-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@vet.Id" class="btn btn-outline-warning">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@vet.Id" class="btn btn-outline-danger">
                                        <i class="bi bi-trash3"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8">
                            <div class="p-4 text-center text-muted">
                                <i class="bi bi-heartbreak fs-3 d-block mb-2"></i>
                                No veterinarians found.
                                <a asp-action="Create">Add the first veterinarian</a>.
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
