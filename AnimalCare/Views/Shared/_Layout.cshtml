@using Microsoft.AspNetCore.Identity
@using AnimalCare.Models
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Animal Care Clinic</title>

    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- Site Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="bg-light">

    <!-- ====================== NAVBAR ======================= -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm py-2">
        <div class="container-fluid">

            <!-- LOGO -->
            <a class="navbar-brand d-flex align-items-center fw-bold" asp-controller="Home" asp-action="Index">
                <i class="bi bi-shield-heart fs-3 me-2"></i>
                Animal Care Clinic
            </a>

            <!-- Mobile Menu Button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- MENU -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">

                    <!-- Always visible -->
                    <li class="nav-item">
                        <a class="nav-link d-flex gap-2 align-items-center" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door-fill"></i> Home
                        </a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- ========== ADMIN MENU ========== -->
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex gap-2 align-items-center" data-bs-toggle="dropdown">
                                    <i class="bi bi-gear-fill"></i> Admin Panel
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item d-flex gap-2 align-items-center" asp-controller="Admin" asp-action="Dashboard">
                                            <i class="bi bi-speedometer2"></i> Dashboard
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider" /></li>

                                    <li>
                                        <a class="dropdown-item d-flex gap-2 align-items-center" asp-controller="Owners" asp-action="Index">
                                            <i class="bi bi-people-fill"></i> Owners
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item d-flex gap-2 align-items-center" asp-controller="Animals" asp-action="Index">
                                            <i class="bi bi-heart-pulse-fill"></i> Animals
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item d-flex gap-2 align-items-center" asp-controller="Veterinarians" asp-action="Index">
                                            <i class="bi bi-person-badge-fill"></i> Veterinarians
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex gap-2 align-items-center" asp-controller="Receptionists" asp-action="Index">
                                            <i class="bi bi-person-workspace"></i> Receptionists
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex gap-2 align-items-center" asp-controller="VetSchedules" asp-action="Index">
                                            <i class="bi bi-calendar-check-fill"></i> Schedules
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item d-flex gap-2 align-items-center" asp-controller="Appointments" asp-action="Index">
                                            <i class="bi bi-journal-medical"></i> Appointments
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item d-flex gap-2 align-items-center" asp-controller="Admin" asp-action="MonthlyReport">
                                            <i class="bi bi-graph-up-arrow"></i> Reports
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

                        <!-- ========== VETERINARIAN MENU ========== -->
                        @if (User.IsInRole("Veterinarian"))
                        {
                            <li class="nav-item">
                                <a class="nav-link d-flex gap-2 align-items-center" asp-controller="Appointments" asp-action="MyAppointments">
                                    <i class="bi bi-calendar2-week"></i> My Appointments
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link d-flex gap-2 align-items-center" asp-controller="Animals" asp-action="Index">
                                    <i class="bi bi-heart-pulse"></i> Animals
                                </a>
                            </li>
                        }

                        <!-- ========== RECEPTIONIST MENU ========== -->
                        @if (User.IsInRole("Receptionist"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex gap-2 align-items-center" data-bs-toggle="dropdown">
                                    <i class="bi bi-journal-text"></i> Appointments
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item d-flex gap-2 align-items-center" asp-controller="Appointments" asp-action="Index">
                                            <i class="bi bi-calendar-date"></i> All Appointments
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item d-flex gap-2 align-items-center" asp-controller="Appointments" asp-action="TodaysSchedule">
                                            <i class="bi bi-brightness-alt-high-fill"></i> Today's Schedule
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link d-flex gap-2 align-items-center" asp-controller="Owners" asp-action="Index">
                                    <i class="bi bi-people-fill"></i> Owners
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link d-flex gap-2 align-items-center" asp-controller="Animals" asp-action="Index">
                                    <i class="bi bi-heart-pulse-fill"></i> Animals
                                </a>
                            </li>
                        }
                    }
                </ul>

                <!-- ================= RIGHT SIDE - USER ================= -->
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        var currentUser = await UserManager.GetUserAsync(User);

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white fw-semibold d-flex gap-2 align-items-center"
                               href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle"></i>
                                @(currentUser?.FirstName) @(currentUser?.LastName)
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item d-flex gap-2 align-items-center"
                                       asp-controller="Account" asp-action="Profile">
                                        <i class="bi bi-person"></i> My Profile
                                    </a>
                                </li>
                                
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-area="Identity" asp-page="/Account/Logout"
                                          asp-route-returnUrl="@Url.Action("Index", "Home")"
                                          method="post">
                                        <button type="submit" class="dropdown-item d-flex gap-2 align-items-center">
                                            <i class="bi bi-box-arrow-right"></i> Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
            </div>
        </div>
    </nav>
    <!-- ============================================================= -->
    <!-- Page Body -->
    <main role="main" class="container mt-4">

        <!-- TempData Success -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- TempData Error -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                <i class="bi bi-exclamation-octagon-fill me-2"></i>
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Page Content -->
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center py-3">
            &copy; 2025 - Animal Care Clinic
        </div>
    </footer>

    <!-- jQuery (required for validation) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery Validation -->
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

    <!-- Site JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
